@model IEnumerable<Dashboard.Models.Topic>

<div class="col-lg-12">
    @foreach (var topic in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                @topic.Title
            </div>
            <div class="panel-body">
                <p>@topic.Body</p>
            </div>
            <div class="panel-footer">
                <small class="text-muted"><i class="fa fa-clock-o"></i> @topic.Created</small>
                <button type="button" class="btn btn-default col-xs-offset-8" id="ReplyButton" onclick="replyToTopic('@topic.Id');">Reply</button>
            </div>
        </div>
        <div class="row">
            <div id="ReplyTab-@topic.Id" class="col-md-11 col-md-offset-1">
            </div>
        </div>
    }
</div>

